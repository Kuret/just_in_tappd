{
  "name": "just-in-tappd",
  "description": "Product management for beer",
  "scripts": {
    "postdeploy": "mix run priv/repo/seeds.exs"
  },
  "env": {
    "MIX_ENV": {
      "required": true,
      "value": "prod"
    },
    "NODE_ENV": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "POOL_SIZE": {
      "required": true
    },
    "UT_RO_KEY": {
      "required": true
    },
    "UT_RW_KEY": {
      "required": true
    },
    "UT_USER": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "size": "free"
    }
  },
  "addons": ["heroku-postgresql", "papertrail", "scout"],
  "buildpacks": [
    {
      "url": "https://github.com/HashNuke/heroku-buildpack-elixir.git"
    },
    {
      "url": "https://github.com/gjaldon/heroku-buildpack-phoenix-static.git"
    }
  ]
}
